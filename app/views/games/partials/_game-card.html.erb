<div class="bg-white big-rounded shadow-sm px-5 py-3 d-flex" >
  <div class="game-card-left ms-3 d-flex flex-column justify-content-center flex-grow-1">
    <h4 class="name"><%= game.name %></h4>
    <p class="invite-msg">You have been invited</p>
  </div>
  <div class="game-card-right d-flex flex-column align-items-center justify-content-around">
    <%= link_to "Accept", accept_game_path(game), method: :post, class: "btn btn-success pb-1" %>
    <%= link_to "Decline", decline_game_path(game), method: :delete, class: "btn btn-danger pt-1" %>
  </div>
</div>
