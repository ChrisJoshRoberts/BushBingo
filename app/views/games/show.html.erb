<div class="header">
  <div class="header-infos">
    <p>Currently Playing</p>
    <h1><%= @game.name %></h1>
  </div>
  <div class="header-location">
    <i class="fa-solid fa-location-dot"></i>
    <p> <%= @game.park.name %></p>
  </div>
  <%# <a href="..." class="btn btn-warning">pause</a>
  <a href="..." class="btn btn-warning">Play</a> %>
</div>

<div>
  <h2>Players</h2>
  <div>
    <%= image_tag('boy2.png', alt: 'little boy', class: 'player-avatar') %>
    <p>Friend Name:</p>
    <p>Points: 0</p>
    <% @game.game_players.each do |game_player| %>
      <%= game_player.points %>
      <%= game_player.user.email %>
    <% end %>
  </div>
</div>

<%= render "footer" %>

